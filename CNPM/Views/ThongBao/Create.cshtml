@model CNPM.Models.TbThongBao

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content container-fluid">
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title mt-5">Thêm thông báo mới</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form method="post">
					<div class="card">
						<div class="card-body">
							<div class="form-group row">
							</div>
							<div class="form-group row">
								<div class="col-md-4">
									<label asp-for="MaSinhVien">Mã số sinh viên</label>
									<input type="text" class="form-control mb-3" asp-for="MaSinhVien" placeholder="SV_ _ _ _">
									<span asp-validation-for="MaSinhVien" class="alert-danger"></span>
								</div>
								<div class="col-md-10">
									<label asp-for="NoiDung">Nội dung</label>
									<input type="text" class="form-control" asp-for="NoiDung" placeholder="Nhâp văn bản ở đây">
									<span asp-validation-for="NoiDung" class="alert-danger"></span>
								</div>
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-primary buttonedit">Lưu</button>
					<a asp-controller="ThongBao" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- Hiển thị các thông báo lỗi chung -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })