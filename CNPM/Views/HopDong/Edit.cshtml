@using CNPM;
@model CNPM.Models.TbHopDong;

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content container-fluid">
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title mt-5">Chỉnh sửa hợp đồng</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form asp-action="Edit" method="post">
					<input type="hidden" asp-for="IdHopDong" />
					<div class="row formtype">
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="IdHopDong">Id hợp đồng</label>
								<input type="text" class="form-control mb-3" asp-for="IdHopDong" placeholder="HD____">
								<span asp-validation-for="IdHopDong" class="alert-danger"></span>
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="MaSoPhong">Phòng</label>
								<select class="form-control" asp-items="ViewBag.PhongList">
									<option value="">-- Chọn phòng --</option>
								</select>
								<span asp-validation-for="MaSoPhong" class="alert-danger"></span>
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="MaSinhVien">Sinh viên</label>
								<select asp-for="MaSinhVien" class="form-control" asp-items="ViewBag.SinhVienList">
									<option value="">-- Chọn sinh viên --</option>
								</select>
								<span asp-validation-for="MaSinhVien" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="MaNhanVien">Nhân viên</label>
								<select asp-for="MaNhanVien" class="form-control" asp-items="ViewBag.NhanVienList">
									<option value="">-- Chọn nhân viên --</option>
								</select>
								<span asp-validation-for="MaNhanVien" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="NgayBatDau">Ngày bắt đầu</label>
								<div class="cal-icon">
									<input type="datetime" class="form-control datetimepicker" asp-for="NgayBatDau">
								</div>
								<span asp-validation-for="NgayBatDau" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="NgayKetThuc">Ngày kết thúc</label>
								<div class="cal-icon">
									<input type="datetime" class="form-control datetimepicker" asp-for="NgayKetThuc">
								</div>
								<span asp-validation-for="NgayKetThuc" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="TienCoc">Tiền cọc</label>
								<input type="number" class="form-control mb-3" asp-for="TienCoc" placeholder="">
								<span asp-validation-for="TienCoc" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="TrangThai">Hoạt động</label>
								<select class="form-control" asp-for="TrangThai">
									<option value="true">Hoạt động</option>
									<option value="false">Không hoạt động</option>
								</select>
								<span asp-validation-for="TrangThai" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="GhiChu">Ghi chú</label>
								<input type="text" class="form-control mb-3" asp-for="GhiChu" placeholder="">
								<span asp-validation-for="GhiChu" class="alert-danger"></span>
							</div>
						</div>

					</div>
					<button type="submit" class="btn btn-primary buttonedit">Lưu</button>
					<a asp-controller="HopDong" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
				</form>
			</div>
		</div>
	</div>
</div>
