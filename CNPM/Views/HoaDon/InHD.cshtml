@using CNPM.Utilities;
@model CNPM.Models.TbHoaDon;


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content mt-5">
        <div class="row">
            <div class="col-sm-5 col-4">
                <h4 class="page-title">Hóa Đơn</h4>
                <p><i>Mã số hóa đơn: @Model.IdHoaDon</i></p>
            </div>
            <div class="col-sm-7 col-8 text-right m-b-30">
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-white" onclick="window.print();"><i class="fas fa-print fa-lg"></i> Print</button>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-box">
                            <div class="row">
                                <div class="col-lg-12 m-b-20">
                                    <ul class="list-unstyled">
                                        <li>
                                            <h5 class="mb-0"><strong>Họ và tên người đóng: @Model.NguoiDong</strong></h5>
                                        </li>
                                        <li>
                                            <p><i>Ngày đóng hóa đơn: @((Model.NgayDong != null) ? ((DateTime)Model.NgayDong).ToString("dd/MM/yyyy") : "Chưa có ngày")</i></p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div>
                                        <h4 class="m-b-10"><strong>Bảng phiếu hóa đơn</strong></h4>
                                        <table class="table table-bordered">
                                            <tbody>
                                                <tr>
                                                    <td><strong>Tiền phòng</strong> <span class="float-right">@CurrencyFormatter.FormatVND(Model.TienPhong)</span></td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Tiền dịch vụ</strong> <span class="float-right">@CurrencyFormatter.FormatVND(Model.IdDichVuNavigation.DonGia)</span></td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <strong>Tổng tiền</strong> <span class="float-right">@CurrencyFormatter.FormatVND(Model.TongTien)</span>
                                                    </td>
                                                </tr>


                                                <tr>
                                                    <td><strong>Ghi chú</strong> <span class="float-right">@(!string.IsNullOrEmpty(Model.GhiChu) ? Model.GhiChu : "Không có ghi chú")</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-lg btn-warning p-2" href="/HoaDon/Index">Quay lại</a>
</div>
