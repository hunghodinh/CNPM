@using CNPM.Models;
@model List<TbPhong>

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">Phòng kí túc</h4>
                        <a href="/Phong/Create" class="btn btn-primary float-right veiwbutton">
                            Add Phòng
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <section class="pricing py-5">
                    <div class="container">
                        <div class="row  mt-5">
                            @foreach (var ph in Model)
                            {
                                <div class="col-lg-3">
                                    <div class="card mb-5 mb-lg-0">
                                        <div class="card-body">

                                            <a class="card-title text-muted text-uppercase text-center" href="@Url.Action("ChiTiet", "Phong", new { MaSoPhong = ph.MaSoPhong })" class="text-dark">
                                                PHÒNG @ph.MaSoPhong
                                            </a>
                                           
                                            
                                            <ul class="fa-ul">
                                                <li>
                                                    <span class="fa-li"><i class="fas fa-check"></i></span><td>@(ph.TrangThai == true ? "Phòng đầy" : "Phòng còn trống")</td>
                                                </li>
                                                <li>
                                                    <span class="fa-li"><i class="fas fa-check"></i></span>Số lượng tối đa @ph.SoNguoiMax
                                                </li>
                                                <li>
                                                    <span class="fa-li"><i class="fas fa-check"></i></span>Loại phòng @ph.LoaiPhong
                                                </li>
                                                <li>
                                                    <span class="fa-li"><i class="fas fa-check"></i></span>@ph.DonGia VND
                                                </li>
                                            </ul>
                                            <tr class="text-right">
                                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@ph.MaSoPhong">
                                                    <i class="fas fa-pencil-alt m-r-5"></i> Sửa
                                                </a>
                                                <a class="btn btn-sm btn-danger text-white" style="background-color: red;" data-toggle="modal" data-target="#deleteModal-@ph.MaSoPhong">
                                                    <i class="fas fa-trash-alt m-r-5"></i> Xóa
                                                </a>
                                            </tr>

                                            
                                            

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    @foreach (var kh in Model)
    {
        <div class="modal fade delete-modal" id="deleteModal-@kh.MaSoPhong" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                        <h3 class="delete_class">Bạn chắc chắn muốn xóa mã phòng "@kh.MaSoPhong" không?</h3>
                        <div class="m-t-20 d-flex justify-content-between">
                            <a href="#" class="btn btn-white me-1" data-dismiss="modal">Close</a> <!-- Sử dụng me-1 -->
                            <form asp-action="Delete" asp-route-id="@kh.MaSoPhong" class="mb-0">
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>